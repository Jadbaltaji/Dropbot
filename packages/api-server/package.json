    "bull": "^4.11.3",
    "coinbase-commerce-node": "^1.0.4",
    "cron": "2.4.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eth-sdk-client": "link:.dethcrypto\\eth-sdk-client",
    "ethers": "^5.7.2",
    "hashi-vault-js": "^0.4.14",
